FROM python:3.10-slim

# 安装系统依赖
RUN apt-get update && apt-get install -y \
    build-essential \
    git \
    wget \
    ffmpeg \
    libsndfile1 \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 复制 index-tts 包文件
COPY ./packages/index-tts /app/index-tts/

# 复制 index-tts-server.py 文件
COPY ./packages/index-tts-server.py /app/

# 安装 PyTorch 和 torchaudio (CUDA 11.8 版本)
RUN pip install --no-cache-dir torch torchaudio --index-url https://download.pytorch.org/whl/cu118

# 安装 pynini 和其他依赖
RUN pip install --no-cache-dir pynini==2.1.6 deepspeed
RUN pip install --no-cache-dir WeTextProcessing --no-deps

# 安装 FastAPI 和其他服务器依赖
RUN pip install --no-cache-dir fastapi uvicorn loguru pydantic

# 安装 index-tts 包及其依赖
WORKDIR /app/index-tts
RUN pip install --no-cache-dir -e .
WORKDIR /app

# 创建模型目录
RUN mkdir -p /app/index-tts/checkpoints

# 暴露端口
EXPOSE 12234

# 设置环境变量
ENV PYTHONUNBUFFERED=1
ENV MODEL_DIR=/app/index-tts/checkpoints
ENV CONFIG_PATH=/app/index-tts/checkpoints/config.yaml
ENV PORT=12234

# 启动命令
CMD ["python", "/app/index-tts-server.py"]
